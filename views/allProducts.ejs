<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      Retailer place order
    </title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light navbar-laravel">
        <div class="container">
        <a class="navbar-brand" href="http://localhost:8080/" style="color:#1fa667">Tracetex</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:8080/createProduct" style="color:#1fa667">Retailer place order</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:8080/createRetailer" style="color:#1fa667">Retailer Registration</a>
                </li>
    
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:8080/viewItems" style="color:#1fa667">Verify Order</a>
                    </li>
            </ul>
    
        </div>
        </div>
    </nav>

    
    <div class="container mt-4">
      <br />
      <form name="myform" onsubmit="return validform()" action="http://localhost:8080/placeOrder" method="POST" >
        <p class="text-center font-weight-bold">All Products</p>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Index</th>
            <th>Name</th>
            <th>Description</th>
            <th>Manufacturer name</th>
            <th>Price</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>

          <% if(data.length){ for(var i = 0; i< data.length; i++) {%>
          <tr>
            <th scope="row"><%= (i+1) %></th>
            <td><%= data[i].pname%></td>
            <td><%= data[i].pdes%></td>
            <td><%= data[i].mname%></td>
            <td><%= data[i].pprice%></td>
            <td><%= data[i].pstatus%></td>
          </tr>
          <% } }else{ %>
          <tr>
            No Product data available
          </tr>
          <% } %>
        </tbody>
        

      </table>
      <div class="row m-2">
            <div class="form-group row m-2">
                <label for="name" class="col-md-4 col-form-label text-md-right">Name</label>
                <div class="col-md-6">
                    <input type="text" id="name" class="form-control" name="name">
                </div>
            </div>

            <div class="form-group row m-2">
                <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                <div class="col-md-6">
                    <input type="password" id="password" class="form-control" name="password">
                </div>
            </div>
            <div class="m-2 col-md-8">
                <button type="submit" class="btn btn-success">
                Place order
                </button>
            </div>
    </div>
    </form>
    </div>
  </body>
</html>